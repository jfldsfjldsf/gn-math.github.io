{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    // ADD THIS SECTION to tell Firebase to serve index.php instead of index.html
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.php"
      }
    ]
  }
}
